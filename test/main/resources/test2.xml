<beans>
    <bean name="intHolder" classname="foo.IntHolder">
        <p name="theInt" value="42"/>
    </bean> 
    <bean name="stringHolder" classname="foo.StrHolder">
        <p name="theString" value="Scooby Scooby Doo"/>
    </bean>
    <bean name="composite" classname="foo.HolderHolder">
        <p name="myInt" ref="intHolder"/>
        <p name="theString" ref="stringHolder"/>
    </bean>    
</beans>